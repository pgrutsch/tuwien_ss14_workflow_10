<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="1.0"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

    <persistence-unit name="camel" transaction-type="RESOURCE_LOCAL">

        <provider>
            org.apache.openjpa.persistence.PersistenceProviderImpl
        </provider>

        <!-- Add Entity classes here -->
        <class>tvgrabber.entities.Series</class>
        <class>tvgrabber.entities.Comment</class>
        <class>tvgrabber.entities.TVGrabberUser</class>

        <properties>
            <property name="openjpa.ConnectionURL" value="jdbc:h2:./mem:h2mem"/>
            <property name="openjpa.ConnectionDriverName" value="org.h2.Driver"/>
            <property name="openjpa.Log" value="DefaultLevel=WARN, Tool=INFO, SQL=TRACE"/>
            <property name="openjpa.RuntimeUnenhancedClasses" value="supported"/>

            <!-- this property initializes a clean database, evertime when starting it -->
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(SchemaAction='add,deleteTableContents')"/>

            <!-- previous used property -->
            <!--property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/-->
        </properties>
    </persistence-unit>

</persistence>